pipeline {
    agent any

    environment {
        DOCKER_IMAGE = "charifray/bonjour21:${BUILD_NUMBER}" // Utilisation correcte de la variable BUILD_NUMBER
        DOCKER_REGISTRY = "docker.io" // ou autre registre
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', 
                    url: 'https://github.com/YUKINEE1/bonjour21.git', 
                    credentialsId: 'f2010422-68a8-41e1-8fa7-657b275121ad'
            }
        }

        stage('Build Maven') {
            steps {
                git url: 'https://github.com/cyrille-leclerc/multi-module-maven-project'
                withMaven{
                    dir('bonjour21') {
                    
                            sh 'mvn clean package -DskipTests'
                        }
                }
                
                    }
                }
            
        

        stage('Build Docker Image') {
            steps {
                dir('bonjour21') {
                    sh "docker build -t ${DOCKER_IMAGE} ."
                }
            }
        }

        stage('Push Docker Image') {
            steps {
                withCredentials([usernamePassword(
                    credentialsId: 'dockerhub-credentials', 
                    usernameVariable: 'USER', 
                    passwordVariable: 'PASS'
                )]) {
                    sh "echo $PASS | docker login ${DOCKER_REGISTRY} -u $USER --password-stdin"
                    sh "docker push ${DOCKER_IMAGE}"
                }
            }
        }

        stage('Deploy (optional)') {
            steps {
                echo "DÃ©ploiement possible sur Kubernetes ou serveur distant"
                // Exemple : kubectl set image deployment/bonjour21 bonjour21=moncompte/bonjour21:latest
            }
        }
    }

    post {
        always {
            cleanWs() // Nettoie le workspace
        }
    }
}
